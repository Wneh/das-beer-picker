extends layout

block content
	.jumbotron
		h1 Das Beer Picker

	h2 Mark your preferred beers

	div(class="col-md-12")
		form(action="/vote" method="post")
			each beer in beers
				div(class="form-group")
					div(class="checkbox")
						label
							input(type="checkbox" value="" name="#{beer.beer_id}")
							| #{beer.name}

			div(class="form-group")
				label(for="nameInput") Name
				input(class="form-control" id="nameInput" placeholder="Name" name="userName")

			button(type="submit" class="btn btn-lg btn-warning") Submit your choices